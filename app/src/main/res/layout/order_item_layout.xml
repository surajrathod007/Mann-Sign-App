<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/bg_color"
        app:cardCornerRadius="14dp"
        app:cardElevation="0dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginTop="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <TextView
                android:layout_marginTop="14dp"
                android:layout_marginLeft="14dp"
                android:fontFamily="@font/satoshi_medium"
                android:textColor="#474444"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"

                android:id="@+id/txtOrderId"
                android:textSize="18sp"
                android:text="Order Id : order123456789"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtOrderProductTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="14dp"
                android:text="Total Products : 5"
                android:textSize="14sp"
                android:fontFamily="@font/satoshi_medium"
                app:layout_constraintTop_toBottomOf="@id/txtOrderId"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/txtOrderDate"
                app:layout_constraintTop_toBottomOf="@id/txtOrderProductTotal"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/satoshi_medium"
                android:layout_marginLeft="14dp"
                android:textSize="14sp"
                android:text="18 july 2003"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:background="@drawable/order_status_bg"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="3dp"
                android:paddingTop="1dp"
                android:textSize="16sp"
                android:fontFamily="@font/satoshi_bold"
                android:textColor="@color/title_text_color"
                android:id="@+id/txtOrderStatus"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Poster"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginRight="14dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>