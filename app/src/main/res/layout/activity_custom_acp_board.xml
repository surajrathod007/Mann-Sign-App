<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.CustomAcpBoardActivity">

        <Button
            android:layout_margin="10dp"
            android:id="@+id/btnDownload"
            android:text="Download Fonts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Your name"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:id="@+id/txtSampleFontNameNew"
            android:textSize="26sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_margin="10dp"
            android:id="@+id/edName"
            android:hint="Enter your name..."
            android:editable="true"
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Font"
                android:textSize="8sp"
                android:textAllCaps="false"
                android:id="@+id/btnApplyFont"
                android:layout_width="60dp"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_marginLeft="8dp"
                android:text="Color"
                android:textSize="8sp"
                android:textAllCaps="false"
                android:id="@+id/btnApplyColor"
                android:layout_width="60dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>




        <!--
        <androidx.recyclerview.widget.RecyclerView
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_margin="10dp"
            tools:listitem="@layout/font_item_layout"
            android:id="@+id/rvFonts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
            -->




    </LinearLayout>
</layout>