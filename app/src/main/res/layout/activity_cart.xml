                        android:layout_marginRight="2dp"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="0.7"
