                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginBottom="14dp"
                    tools:listitem="@layout/cart_item_layout"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    />



                <LinearLayout
